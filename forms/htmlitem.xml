<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset
			name ="item"
	>
		<field
				name="title"
				type="text"
				label="MOD_BFHTMLBLOCKLIST_TITLE_LABEL"
				required="true"
				size="80"
		/>

		<field
				name="html"
				type="textarea"
				label="MOD_BFHTMLBLOCKLIST_HTML_LABEL"
				required="true"
				filter="raw"
				rows="1"
		/>

		<field
				name="description"
				type="textarea"
				label="MOD_BFHTMLBLOCKLIST_DESCRIPTION_LABEL"
				rows="1"
		/>

		<field
				name="state"
				type="radio"
				label="JSTATUS"
				class="btn-group btn-group-yesno"
				layout="joomla.form.field.radio.switcher"
				filter="intval"
				size="1"
				default="1"
		>
			<option value="0">JUNPUBLISHED</option>
			<option value="1">JPUBLISHED</option>
		</field>
	</fieldset>
</form>
